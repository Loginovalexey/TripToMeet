<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/questionItemImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/question_walk"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/questionItemCheckImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/questionItemImage"
        app:layout_constraintEnd_toEndOf="@+id/questionItemImage"
        app:layout_constraintStart_toStartOf="@+id/questionItemImage"
        app:layout_constraintTop_toTopOf="@+id/questionItemImage"
        app:layout_constraintWidth_percent="0.5"
        app:srcCompat="@drawable/checked"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/questionItemTitle"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walk"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/questionItemImage"
        app:layout_constraintEnd_toEndOf="@+id/questionItemImage"
        app:layout_constraintStart_toStartOf="@+id/questionItemImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
