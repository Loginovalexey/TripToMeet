<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="shapeAppearanceSmallComponent">@style/SmallShapeAppearance</item>>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AllTextsStyle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H1" parent="AllTextsStyle">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H2" parent="AllTextsStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="H3" parent="AllTextsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="H4" parent="AllTextsStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="H4normal" parent="AllTextsStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="H5" parent="AllTextsStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text10spMontserratMedium" parent="AllTextsStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text10spMontserratRegular" parent="AllTextsStyle">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="InputEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/colorText</item>
    </style>

    <style name="InputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"@font/montserrat_medium"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:singleLine">true</item>


    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorOnPrimary</item>
    </style>

    <style name="Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonText" parent="AllTextsStyle">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <style name="BigButtonText" parent="ButtonText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueButton" parent="Button">
        <item name="android:backgroundTint">@drawable/blu_button_states_colors</item>
        <item name="android:textColor">@drawable/blu_button_text_states_colors</item>
        <item name="android:textAppearance">@style/BigButtonText</item>
    </style>

    <style name="GrayButton" parent="Button">
        <item name="android:backgroundTint">@drawable/gray_button_states_colors</item>
        <item name="android:textColor">@drawable/gray_button_text_states_colors</item>
        <item name="android:textAppearance">@style/BigButtonText</item>
    </style>

    <style name="OutlineIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@drawable/stroke_button_states_colors</item>
        <item name="android:textColor">@drawable/outline_button_states_colors_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/H3</item>
        <item name="iconSize">20dp</item>
    </style>
</resources>